<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:segmentedgroup="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kidpower_background"
    android:id="@+id/layout_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_team_progress"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout_packets"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/fontsize_normal"
                android:layout_height="@dimen/fontsize_normal"
                android:id="@+id/iv_packets"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_rutf" />

            <org.unicefkidpower.schools.ui.KPTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero_string"
                android:id="@+id/txt_packets_value"
                style="@style/style_textview_heading"
                android:textColor="@color/kidpower_brownish_grey"
                android:textSize="@dimen/fontsize_small" />

            <org.unicefkidpower.schools.ui.KPTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/packets"
                android:id="@+id/txt_packets_description"
                android:textAllCaps="true"
                style="@style/style_textview_heading"
                android:textColor="@color/kidpower_brownish_grey"
                android:textSize="@dimen/fontsize_extra_tiny" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout_power_points"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:visibility="visible">

            <ImageView
                android:layout_width="@dimen/fontsize_normal"
                android:layout_height="@dimen/fontsize_normal"
                android:id="@+id/iv_power_points"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_points" />

            <org.unicefkidpower.schools.ui.KPTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero_string"
                android:id="@+id/txt_power_points_value"
                style="@style/style_textview_heading"
                android:textColor="@color/kidpower_brownish_grey"
                android:textSize="@dimen/fontsize_small" />

            <org.unicefkidpower.schools.ui.KPTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_powerpoints"
                android:id="@+id/txt_power_points_description"
                android:textAllCaps="true"
                style="@style/style_textview_heading"
                android:textColor="@color/kidpower_brownish_grey"
                android:textSize="@dimen/fontsize_extra_tiny" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout_average_steps_per_day"
            android:layout_marginLeft="30dp"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/fontsize_normal"
                android:layout_height="@dimen/fontsize_normal"
                android:id="@+id/iv_average_steps_per_day"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_steps" />

            <org.unicefkidpower.schools.ui.KPTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero_string"
                android:id="@+id/txt_average_steps_per_day_value"
                style="@style/style_textview_heading"
                android:textColor="@color/kidpower_brownish_grey"
                android:textSize="@dimen/fontsize_small" />

            <org.unicefkidpower.schools.ui.KPTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/avg_steps_day"
                android:id="@+id/txt_average_steps_per_day_description"
                android:textAllCaps="true"
                style="@style/style_textview_heading"
                android:textColor="@color/kidpower_brownish_grey"
                android:textSize="@dimen/fontsize_extra_tiny" />
        </LinearLayout>
    </LinearLayout>

    <org.unicefkidpower.schools.ui.KPTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/you_are_off_to_a_great_start"
        android:id="@+id/txt_statement"
        style="@style/style_textview_heading"
        android:textColor="@color/kidpower_light_blue"
        android:textSize="@dimen/kidpower_paragraphheadfontsize"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/layout_team_progress" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sv_tab_content"
        android:fillViewport="true"
        android:layout_below="@+id/txt_statement">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_tab_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layout_kids"
                android:orientation="vertical"
                android:paddingBottom="100dp"
                android:paddingTop="100dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="213dp"
                    android:visibility="visible"
                    android:id="@+id/layout_empty"
                    android:layout_gravity="bottom" />
            </LinearLayout>

            <LinearLayout
				android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layout_leaderboard"
                android:paddingTop="100dp" >
			</LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <org.unicefkidpower.schools.ui.SegmentedGroup
        android:id="@+id/segmentedTeamStats"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_button_height"
        android:layout_marginTop="@dimen/margin_16"
        android:orientation="horizontal"
        android:weightSum="2"
        segmentedgroup:sc_border_radius="@dimen/dimen_margin_5"
        segmentedgroup:sc_border_width="@dimen/dimen_margin_1"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        app:sc_tint_color="@color/kidpower_light_blue"
        app:sc_stroke_color="@color/transparent"
        app:sc_unchecked_text_color="@color/kidpower_warm_grey"
        android:layout_below="@+id/txt_statement">

        <org.unicefkidpower.schools.ui.KPRadioButton
            android:id="@+id/radioKids"
            style="@style/kidpower_style_radiobutton_general"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="@string/kids"
            android:textColor="@android:color/white"
            android:textSize="16dp" />

        <org.unicefkidpower.schools.ui.KPRadioButton
            android:id="@+id/radioLeaderboard"
            style="@style/kidpower_style_radiobutton_general"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:text="@string/layout_stats_leaderboard"
            android:textColor="@android:color/white"
            android:textSize="16dp" />

    </org.unicefkidpower.schools.ui.SegmentedGroup>

    <org.unicefkidpower.schools.helper.FontView
        android:id="@+id/btn_sync_all"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_button_height"
        android:gravity="center"
        android:text="@string/button_icon_sync_all"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_text_normal"
        android:textColor="@color/white"
        android:background="@color/kidpower_light_blue"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        />
</RelativeLayout>