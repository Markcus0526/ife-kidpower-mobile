<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
										xmlns:tools="http://schemas.android.com/tools"
										xmlns:app="http://schemas.android.com/apk/res-auto"
										android:id="@+id/layout_parent"
										android:layout_width="match_parent"
										android:layout_height="match_parent"
										android:fitsSystemWindows="true"
										tools:ignore="MissingPrefix">

	<RelativeLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/kidpower_navbarheight"
			android:layout_alignParentTop="true"
			android:background="@color/kidpower_light_blue"
			android:id="@+id/rlNavigationBar">

			<org.unicefkidpower.schools.ui.KPTextView
				style="@style/style_textview_general"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:text="@string/contact_us"
				android:gravity="left|center_vertical"
				android:layout_toEndOf="@+id/image_back"
				android:textColor="@android:color/white"
				android:background="@null"
				android:layout_marginLeft="@dimen/kidpower_inputboxpadding"
				android:layout_marginTop="1dp"
				android:textSize="@dimen/font_nav_description" />

			<ImageButton
				android:id="@+id/image_back"
				android:layout_width="50dp"
				android:layout_height="match_parent"
				android:layout_alignParentStart="true"
				android:background="@null"
				android:scaleType="centerInside"
				android:padding="6dp"
				android:src="@drawable/ic_back_arrow"/>

			<ImageButton
				android:id="@+id/image_send"
				android:layout_width="50dp"
				android:layout_height="match_parent"
				android:layout_alignParentEnd="true"
				android:background="@null"
				android:padding="6dp"
				android:scaleType="centerInside"
				android:src="@drawable/btn_send"
				android:tint="#ffffff"/>

		</RelativeLayout>

		<org.unicefkidpower.schools.ui.KPEditText
			android:id="@+id/edit_desc"
			android:background="@color/white"
			style="@style/style_edittext_multiline"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@+id/rlNavigationBar"
			android:padding="10dp"
			android:hint="@string/kid_power_feedback"
			android:textColor="@color/kidpower_desc"
			android:textSize="@dimen/dimen_text_normal"/>

		<org.unicefkidpower.schools.ui.KPTextView
			style="@style/style_textview_general"
			android:id="@+id/text_filename"
			android:background="@color/kidpower_light_grey_2"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_alignParentBottom="true"
			android:gravity="center"
			android:textColor="@color/kidpower_brownish_grey"
			android:textSize="@dimen/dimen_text_normal"/>

	</RelativeLayout>

</android.support.v4.widget.DrawerLayout>