<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_parent">

    <LinearLayout
        android:id="@+id/layoutContent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >

    <LinearLayout
        android:id="@+id/llInitPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="@color/kidpower_background"
        android:visibility="visible">

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/teamsync_title"
            android:gravity="center_horizontal"
            style="@style/kidpower_subhead"
            android:textSize="@dimen/dimen_text_normal"
            android:id="@+id/tvTitle"
            />

        <org.unicefkidpower.schools.helper.FontView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/icon_string_sync"
            android:textSize="@dimen/font_sync_mark"
            android:textStyle="bold"
            android:textColor="@color/kidpower_light_blue"
            />

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/team_syncing_description"
            style="@style/kidpower_secondarytext"
            android:textSize="@dimen/dimen_text_desc"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tvDescription"
            android:lineSpacingMultiplier="1.5"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_button_height"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            >

            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/button_icon_cancel"
                android:textStyle="bold"
                android:textSize="@dimen/dimen_text_normal"
                android:textColor="@color/kidpower_brownish_grey"
                android:background="@color/kidpower_light_gray"
                android:layout_marginRight="16dp"
                />

            <org.unicefkidpower.schools.helper.FontView
                android:id="@+id/btnStart"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/button_icon_start_sync"
                android:textStyle="bold"
                android:textSize="@dimen/dimen_text_normal"
                android:textColor="@color/white"
                android:background="@color/kidpower_light_blue"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSyncing"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="@color/kidpower_background"
        android:visibility="visible"
        >

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="stat"
            android:gravity="center_horizontal"
            style="@style/kidpower_subhead"
            android:textSize="@dimen/dimen_text_normal"
            android:id="@+id/tvSyncStatus" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <org.unicefkidpower.schools.helper.FontView
                android:id="@+id/fvSyncMark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/icon_string_sync"
                android:textSize="@dimen/font_sync_mark"
                android:textStyle="bold"
                android:textColor="@color/kidpower_light_blue"
                android:layout_centerHorizontal="true" />

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/kidpower_secondarytext"
                android:textSize="@dimen/dimen_text_desc"
                android:gravity="right"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tvStart"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/fvSyncMark"
                android:layout_centerVertical="true" />

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/kidpower_secondarytext"
                android:textSize="@dimen/dimen_text_desc"
                android:gravity="right"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tvEnd"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/fvSyncMark"
                android:layout_alignParentBottom="false"
                android:layout_alignBottom="@+id/fvSyncMark" />

        </RelativeLayout>

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="()"
            style="@style/kidpower_secondarytext"
            android:textSize="@dimen/dimen_text_desc"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tvSyncDescription" />

        <ListView android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:id="@+id/lvTeam" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="64dp">

            <TextView
                android:id="@+id/btnCancelSync"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_button_height"
                android:gravity="center"
                android:text="@string/button_icon_cancel_sync"
                android:textStyle="bold"
                android:textSize="@dimen/dimen_text_normal"
                android:textColor="@color/kidpower_brownish_grey"
                android:background="@color/kidpower_light_gray"
                />

            <TextView
                android:id="@+id/btnSyncDone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_button_height"
                android:gravity="center"
                android:text="@string/button_icon_close"
                android:textStyle="bold"
                android:textSize="@dimen/dimen_text_normal"
                android:textColor="@color/white"
                android:background="@color/kidpower_light_blue"
                />
        </LinearLayout>

    </LinearLayout>

    </LinearLayout>


</RelativeLayout>