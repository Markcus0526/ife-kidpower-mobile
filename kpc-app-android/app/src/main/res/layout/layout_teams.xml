<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_parent">

	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/rlCreateTeamHint"
		android:layout_centerInParent="true">

		<view
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			class="org.unicefkidpower.schools.ui.KPTextView"
			android:id="@+id/txtHint"
			android:text="@string/create_team_first"
			android:layout_centerHorizontal="true"
			android:textSize="@dimen/fontsize_small"
			android:textColor="@color/fallback_text_color"/>

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/rlCreateButton"
			android:layout_marginTop="@dimen/margin_12"
			android:layout_below="@+id/txtHint"
			android:layout_centerHorizontal="true"
			android:paddingTop="@dimen/margin_10"
			android:paddingBottom="@dimen/margin_10"
			android:paddingLeft="@dimen/margin_16"
			android:paddingRight="@dimen/margin_16"
			android:background="@color/kidpower_light_blue">

			<ImageView
				android:id="@+id/imgNewTeam"
				android:src="@drawable/icon_new_team_white"
				android:scaleType="centerCrop"
				android:layout_width="@dimen/imagesize_normal"
				android:layout_height="@dimen/imagesize_normal"
				android:layout_centerVertical="true"
				/>

			<TextView
				android:text="@string/new_team"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/txtNewTeam"
				android:layout_toRightOf="@+id/imgNewTeam"
				android:layout_centerVertical="true"
				android:layout_marginLeft="@dimen/margin_10"
				android:textSize="@dimen/fontsize_normal"
				android:textColor="@color/white"/>
		</RelativeLayout>

	</RelativeLayout>

	<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
		android:id="@+id/scrollTeams">

        <LinearLayout
            android:id="@+id/llTeamsContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            />

    </ScrollView>

</RelativeLayout>