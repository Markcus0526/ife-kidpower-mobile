<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
										xmlns:tools="http://schemas.android.com/tools"
										xmlns:app="http://schemas.android.com/apk/res-auto"
										android:id="@+id/layout_parent"
										android:layout_width="match_parent"
										android:layout_height="match_parent"
										android:fitsSystemWindows="true"
										tools:ignore="MissingPrefix">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="@dimen/kidpower_navbarheight"
			android:background="@color/kidpower_light_blue"
			android:id="@+id/rlNavigationBar">

			<ImageButton
				android:id="@+id/image_back"
				android:layout_width="50dp"
				android:layout_height="match_parent"
				android:layout_alignParentStart="true"
				android:background="@null"
				android:scaleType="centerInside"
				android:padding="6dp"
				android:src="@drawable/ic_back_arrow"/>

			<org.unicefkidpower.schools.ui.KPTextView
				style="@style/style_textview_general"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_toEndOf="@+id/image_back"
				android:text="@string/helper_center"
				android:gravity="left|center_vertical"
				android:textColor="@android:color/white"
				android:background="@null"
				android:layout_marginLeft="@dimen/kidpower_inputboxpadding"
				android:textSize="@dimen/font_nav_description" />

			<org.unicefkidpower.schools.ui.KPEditText
				android:id="@+id/edit_search"
				android:layout_width="150dp"
				android:layout_height="match_parent"
				android:layout_toStartOf="@+id/image_search"
				android:textColor="@color/white"
				android:textSize="@dimen/font_nav_description"
				android:background="@color/kidpower_light_blue"
				android:hint="@string/layout_search"
				android:inputType="text"
				android:imeOptions="actionSearch"/>

			<ImageButton
				android:id="@+id/image_search"
				android:layout_width="50dp"
				android:layout_height="match_parent"
				android:layout_toStartOf="@+id/image_mine"
				android:background="@null"
				android:padding="6dp"
				android:scaleType="centerInside"
				android:src="@drawable/lb_ic_in_app_search"/>

			<ImageButton
				android:id="@+id/image_mine"
				android:layout_width="50dp"
				android:layout_height="match_parent"
				android:layout_alignParentEnd="true"
				android:background="@null"
				android:padding="6dp"
				android:scaleType="centerInside"
				android:src="@drawable/menu"/>

		</RelativeLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<org.unicefkidpower.schools.ui.KPExpandableListView
				android:id="@+id/list_category"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:groupIndicator="@drawable/indicator_select"/>

			<android.support.v7.widget.RecyclerView
				android:id="@+id/list_search"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:divider="@null"/>

		</RelativeLayout>

	</LinearLayout>

</android.support.v4.widget.DrawerLayout>