<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    android:fitsSystemWindows="true"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_sidebar_padding"
        android:paddingBottom="@dimen/dimen_sidebar_padding"
        android:paddingLeft="@dimen/dimen_sidebar_padding"
        android:paddingRight="0dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/ivItem"
            android:layout_width="@dimen/dimen_sidebar_image"
            android:layout_height="@dimen/dimen_sidebar_image"
            android:src="@drawable/icon_curriculum"
            android:layout_marginRight="@dimen/dimen_sidebar_padding"/>

        <TextView
            android:id="@+id/txtLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sidebar_curriculum"
            android:textColor="@color/sidebar_text_inactive"
            android:textSize="@dimen/dimen_sidebar_textsize"
			android:layout_marginRight="@dimen/dimen_sidebar_padding"
            android:gravity="center_vertical"/>

    </LinearLayout>
</LinearLayout>