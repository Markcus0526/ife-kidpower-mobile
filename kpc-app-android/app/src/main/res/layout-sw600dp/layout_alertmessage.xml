<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:id="@+id/layout_parent"
                android:gravity="center"
        >

    <!-- contents -->
    <RelativeLayout android:layout_width="476dp"
                    android:layout_height="wrap_content"
            >
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                >

            <!-- space -->
            <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_height="17dp"
                    android:orientation="vertical"
                    >
            </LinearLayout>

            <!-- center -->
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:background="@drawable/dlg_bg"
                    >

                <!-- space -->
                <LinearLayout
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="vertical"
                        >
                </LinearLayout>

                <!-- title -->
                <TextView android:layout_width="match_parent"
                          android:layout_height="60dp"
                          android:text="@string/layout_alertmessage_title"
                          style="@style/kidpower_dialogtitletext"
                          android:gravity="center_horizontal"/>

                <!-- body -->
                <TextView android:layout_width="match_parent"
                          android:layout_height="80dp"
                          android:text="@string/layout_alertmessage_content"
                          style="@style/kidpower_primarytext"
                          android:gravity="center_horizontal"
                          android:textSize="16dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        >

                    <!-- enter -->
                    <Button
                            android:layout_marginLeft="20dp"
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:text="@string/button_icon_ok"
                            android:background="@drawable/welcome_btnbg"
                            style="@style/kidpower_buttonnormal"
                            android:id="@+id/btnOk"
                            />

                </LinearLayout>

                <!-- space -->
                <LinearLayout
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="vertical"
                        >
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>