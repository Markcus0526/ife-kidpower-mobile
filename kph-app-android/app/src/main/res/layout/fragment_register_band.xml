<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@color/kph_color_main_background"
				android:id="@+id/layout_parent">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@+id/txtRescan">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<LinearLayout
				android:id="@+id/llUserInfo"
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="@dimen/dimen_margin_30"
				android:layout_alignParentTop="true"
				android:layout_alignParentStart="true">

				<FrameLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<LinearLayout
						android:id="@+id/llAvatarBandChain"
						android:orientation="horizontal"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_horizontal"
						android:visibility="visible"
						android:paddingStart="@dimen/dimen_20dp"
						android:paddingEnd="@dimen/dimen_20dp">

						<ImageView
							android:id="@+id/ivAvatar"
							android:layout_width="0dp"
							android:layout_height="@dimen/dimen_avatar_size"
							android:padding="@dimen/dimen_margin_3"
							android:src="@drawable/avatar_placeholder"
							android:layout_weight="1"/>

						<ImageView
							android:layout_width="0dp"
							android:layout_height="match_parent"
							android:src="@drawable/chain_link"
							android:layout_weight="0.4"
							android:id="@+id/ivChain"
							android:layout_marginStart="@dimen/dimen_margin_6"
							android:layout_marginEnd="@dimen/dimen_margin_6"/>

						<ImageView
							android:id="@+id/iv_band"
							android:layout_width="0dp"
							android:layout_height="@dimen/dimen_avatar_size"
							android:src="@drawable/orange_band"
							android:layout_weight="1"/>

					</LinearLayout>

					<RelativeLayout
						android:id="@+id/rlAvatarBandLinked"
						android:orientation="horizontal"
						android:layout_width="@dimen/dimen_avatar_size"
						android:layout_height="wrap_content"
						android:gravity="center_horizontal"
						android:layout_gravity="center_horizontal"
						android:visibility="gone">

						<ImageView
							android:layout_width="match_parent"
							android:layout_height="@dimen/dimen_avatar_size"
							android:src="@drawable/orange_band"
							/>

						<ImageView
							android:layout_width="60dp"
							android:layout_height="60dp"
							android:src="@drawable/ic_white_check"
							android:layout_centerInParent="true"/>

						<ImageView
							android:id="@+id/iv_avatar1"
							android:layout_width="match_parent"
							android:layout_height="@dimen/dimen_avatar_size"
							android:padding="@dimen/dimen_margin_8"
							android:src="@drawable/avatar_placeholder"
							/>

					</RelativeLayout>
				</FrameLayout>

				<org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
					android:id="@+id/txtUsername"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					style="@style/style_textview_heading"
					android:text="Username"
					android:textSize="@dimen/dimen_font_size_base_subtitle"
					android:textColor="@android:color/white"
					android:gravity="center"
					android:layout_marginTop="@dimen/dimen_margin_5"/>

			</LinearLayout>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/searching_layout"
				android:layout_below="@+id/llUserInfo"
				android:layout_centerInParent="false">

				<org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
					android:id="@+id/txtStatus"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					style="@style/style_textview_heading"
					android:text="@string/register_searching_band"
					android:textSize="@dimen/dimen_font_size_base_title"
					android:textColor="@android:color/white"
					android:gravity="center"
					android:layout_centerInParent="false"/>

				<ImageView
					android:id="@+id/ivRotateCircle"
					android:layout_width="@dimen/dimen_32dp"
					android:layout_height="@dimen/dimen_32dp"
					android:layout_centerHorizontal="true"
					android:layout_marginTop="@dimen/dimen_8dp"
					android:src="@drawable/rotate_circle"
					android:layout_below="@+id/txtStatus"
					/>

			</RelativeLayout>

			<LinearLayout
				android:id="@+id/llRegisterBands"
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@+id/llUserInfo"
				android:visibility="visible">

				<org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
					android:id="@+id/txtLinkDescription"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					style="@style/style_textview_heading"
					android:text="@string/which_band_do_you_want"
					android:textSize="@dimen/dimen_font_size_base_title"
					android:textColor="@android:color/white"
					android:gravity="center" />

				<RelativeLayout
					android:id="@+id/rlBand"
					android:layout_width="match_parent"
					android:layout_height="64dp"
					android:layout_marginTop="@dimen/dimen_margin_20"
					android:layout_marginBottom="@dimen/dimen_margin_20" >

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_marginTop="6dp"
						android:layout_marginBottom="6dp"
						android:background="@color/kph_color_orange"
						/>

					<org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:background="@drawable/kph_band_id_drawable"
						android:layout_marginStart="80dp"
						android:layout_marginEnd="80dp"
						android:textColor="@android:color/white"
						android:text="@string/register_tap_your_band"
						android:gravity="center"
						style="@style/style_textview_general"
						android:textSize="@dimen/dimen_font_size_base"
						android:padding="@dimen/dimen_12dp"
						android:lineSpacingExtra="4dp" />
				</RelativeLayout>

				<org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					style="@style/style_textview_general"
					android:text="@string/register_select_matching_band"
					android:textSize="@dimen/dimen_font_size_base_subtitle"
					android:textColor="@android:color/white"
					android:layout_marginTop="@dimen/dimen_margin_5"
					android:layout_marginBottom="@dimen/dimen_margin_5"
					android:layout_marginStart="30dp"
					/>

				<LinearLayout
					android:id="@+id/layoutList"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_marginStart="30dp"
					/>
			</LinearLayout>
		</RelativeLayout>
	</ScrollView>

	<org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
		android:id="@+id/txtRescan"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		style="@style/style_textview_general"
		android:layout_marginBottom="@dimen/dimen_margin_5"
		android:padding="@dimen/dimen_margin_8"
		android:text="@string/dont_see_band_search_again"
		android:textSize="@dimen/dimen_font_size_base_subtitle"
		android:layout_alignParentBottom="true"
		android:gravity="center"
		android:textColor="@android:color/white" />

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/layout_titlebar" >

		<org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
			android:id="@+id/btnSkip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			style="@style/style_textview_general"
			android:text="@string/skip"
			android:textSize="@dimen/dimen_font_size_base_subtitle"
			android:textColor="@android:color/white"
			android:layout_alignParentEnd="true"
			android:gravity="center_vertical"
			android:layout_centerVertical="false"
			android:paddingStart="13dp"
			android:paddingEnd="13dp"
			android:paddingTop="13dp"
			android:paddingBottom="13dp"
			android:layout_marginTop="@dimen/dimen_margin_15"/>

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:id="@+id/btnBack"
			android:layout_centerVertical="true">

			<ImageView
				android:layout_width="@dimen/dimen_navigation_bar_transparent_backarrow_width"
				android:layout_height="@dimen/dimen_navigation_bar_transparent_backarrow_height"
				android:id="@+id/ivBackground"
				android:layout_centerVertical="true"
				android:src="@drawable/back_arrow"
				android:paddingStart="@dimen/dimen_navigation_bar_transparent_back_arrow_padding_start"
				android:paddingEnd="@dimen/dimen_navigation_bar_back_arrow_padding_end"
				android:paddingTop="@dimen/dimen_navigation_bar_transparent_back_arrow_padding_top"
				android:paddingBottom="@dimen/dimen_navigation_bar_back_arrow_padding_bottom"
				android:scaleType="fitCenter" />

		</RelativeLayout>
	</RelativeLayout>
</RelativeLayout>