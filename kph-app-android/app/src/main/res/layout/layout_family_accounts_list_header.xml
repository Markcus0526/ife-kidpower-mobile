<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:id="@+id/item_content">

	<org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/switch_to"
		android:id="@+id/txt_sync_band_recommendation"
		android:gravity="center"
		android:textColor="@android:color/white"
		android:background="@color/kph_color_light_blue"
		android:textSize="@dimen/dimen_font_size_base"
		android:paddingTop="@dimen/dimen_8dp"
		android:paddingBottom="@dimen/dimen_8dp"
		android:paddingStart="@dimen/dimen_24dp"
		android:paddingEnd="@dimen/dimen_24dp" />

	<ImageView
		android:layout_width="match_parent"
		android:layout_height="@dimen/dimen_1dp"
		android:background="@color/kph_color_dark_blue_30"
		android:layout_alignParentBottom="true"
		android:id="@+id/iv_splitter" />

</RelativeLayout>