<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layout_content">

	<RelativeLayout
		android:id="@+id/layout_subcontent"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
			android:id="@+id/txtLabel"
			style="@style/style_textview_heading"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toEndOf="@+id/ivItem"
			android:gravity="center_vertical"
			android:text="30"
			android:textColor="@android:color/white"
			android:textSize="@dimen/dimen_font_size_heading_count"/>

		<ImageView
			android:id="@+id/ivItem"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_alignParentStart="true"
			android:layout_centerVertical="true"
			android:layout_marginEnd="@dimen/dimen_4dp"
			android:scaleType="fitCenter"
			android:src="@drawable/packet"/>
	</RelativeLayout>

</RelativeLayout>