<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				xmlns:app="http://schemas.android.com/apk/res-auto"
				android:background="@color/kph_color_main_background"
				android:id="@+id/layout_parent">

	<RelativeLayout
		android:id="@+id/layout_navigation_bar_content"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dimen_navigation_bar_height"
		android:background="@color/kph_color_dark_blue">

		<org.unicefkidpower.kid_power.View.CustomControls.KPHFamilyAccountSwitchButton
			android:layout_width="@dimen/dimen_navigation_bar_height"
			android:layout_height="match_parent"
			android:id="@+id/btn_family_account_switcher"
			android:layout_marginStart="@dimen/dimen_margin_8" />

		<org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/txtTitle"
			android:layout_centerVertical="true"
			android:layout_centerHorizontal="true"
			android:textColor="@color/kph_color_navigation_bar_title"
			android:textSize="@dimen/dimen_font_size_heading_base"
			android:text="@string/passport"
			style="@style/style_textview_heading"/>

		<org.unicefkidpower.kid_power.View.CustomControls.KPHButton
			android:layout_width="@dimen/dimen_avatar_size"
			android:layout_height="match_parent"
			style="@style/style_textview_general"
			android:textSize="@dimen/dimen_font_size_base"
			android:textColor="@android:color/white"
			android:text="@string/credits"
			android:layout_alignParentEnd="true"
			android:background="@null"
			android:id="@+id/btn_credits"/>
	</RelativeLayout>


	<org.unicefkidpower.kid_power.View.CustomControls.KPHGradientRecyclerView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scrollbars="vertical"
		android:layout_below="@+id/layout_navigation_bar_content"
		android:id="@+id/main_listview"/>


	<ImageView
		android:layout_width="match_parent"
		android:layout_height="@dimen/shadow_height"
		android:background="@drawable/shadow_bottom"
		android:layout_below="@+id/layout_navigation_bar_content"
		android:id="@+id/title_bar_shadow"/>
</RelativeLayout>