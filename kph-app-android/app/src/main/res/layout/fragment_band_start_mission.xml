<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/kph_color_main_background"
    android:id="@+id/layout_parent">

        <LinearLayout
            android:id="@+id/llContent"
            android:orientation="vertical"
            android:layout_width="330dp"
            android:layout_height="550dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="visible">

            <org.unicefkidpower.kid_power.View.CustomControls.KPHSyncMark
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/startMark" />

            <LinearLayout
                android:id="@+id/llResult"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:visibility="visible">

                <org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Well done!"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    style="@style/FONT_BASE_TITLE"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:id="@+id/resultStatus"
                    android:gravity="center_horizontal" />

                <org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_4dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/sync_no_activities"
                    android:textColor="@android:color/white"
                    android:id="@+id/resultSummary"
                    android:gravity="center_horizontal"
                    android:maxWidth="280dp"
                    style="@style/FONT_BASE"
                    />

                <org.unicefkidpower.kid_power.View.CustomControls.KPHButton
                    android:id="@+id/btnGoto"
                    style="@style/style_button_general"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_button_general_height"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="bottom"
                    android:text="@string/goto_mission"
                    android:visibility="visible"
                    />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/llTutorial"
            android:layout_width="330dp"
            android:layout_height="550dp"
            android:visibility="gone"
            android:layout_gravity="center"
            >

            <org.unicefkidpower.kid_power.View.CustomControls.CustomViewPager
                android:id="@+id/vwPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <LinearLayout
                android:id="@+id/llIndicator"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:padding="@dimen/dimen_10dp"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>
</LinearLayout>
</RelativeLayout>