<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/layout_parent"
    android:background="@color/kph_color_main_background">

	<RelativeLayout
		android:id="@+id/layout_titlebar"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dimen_navigation_bar_height"
		android:background="@color/kph_color_dark_blue">

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_alignParentStart="true"
			android:id="@+id/btnBack"
			android:layout_centerVertical="true"
			>

			<ImageView
				android:layout_width="@dimen/dimen_navigation_bar_backarrow_width"
				android:layout_height="match_parent"
				android:id="@+id/ivBackground"
				android:layout_centerVertical="true"
				android:src="@drawable/back_arrow"
				android:paddingStart="@dimen/dimen_navigation_bar_back_arrow_padding_start"
				android:paddingEnd="@dimen/dimen_navigation_bar_back_arrow_padding_end"
				android:paddingTop="@dimen/dimen_navigation_bar_back_arrow_padding_top"
				android:paddingBottom="@dimen/dimen_navigation_bar_back_arrow_padding_bottom"
				android:scaleType="fitCenter" />

		</RelativeLayout>

		<org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/txtTitle"
			android:layout_centerVertical="true"
			android:layout_centerHorizontal="true"
			android:textColor="@color/kph_color_navigation_bar_title"
			android:textSize="@dimen/dimen_font_size_heading_base"
			android:text="@string/follow_someone"
			style="@style/style_textview_heading"/>

	</RelativeLayout>


    <RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/content_layout"
		android:layout_below="@+id/layout_titlebar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/dimen_margin_30"
            android:paddingEnd="@dimen/dimen_margin_30"
            android:id="@+id/layout_search_box">

            <org.unicefkidpower.kid_power.View.CustomControls.KPHEditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_band_input_height"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_username"
                android:layout_toStartOf="@+id/btn_go"
                android:hint="@string/search_by_username"
                android:background="@drawable/kph_drawable_white_left_corners"
                android:paddingStart="@dimen/dimen_margin_10"
                android:paddingEnd="@dimen/dimen_margin_10"
                style="@style/style_edittext_general"
                android:textSize="@dimen/dimen_font_size_base_title"
                android:imeOptions="actionGo"/>

            <org.unicefkidpower.kid_power.View.CustomControls.KPHButton
                android:layout_width="@dimen/dimen_band_input_height"
                android:layout_height="@dimen/dimen_band_input_height"
                android:text="@string/go"
                android:id="@+id/btn_go"
                android:layout_alignParentEnd="true"
                android:background="@drawable/kph_drawable_orange_right_corners"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_font_size_heading_button"
                style="@style/style_button_general" />

        </RelativeLayout>

        <org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/follow_someone_search_error"
            android:id="@+id/txt_notification"
            android:textColor="@android:color/white"
            android:textSize="@dimen/dimen_font_size_base"
            android:layout_marginTop="@dimen/dimen_margin_5"
            style="@style/style_textview_general"
            android:layout_alignStart="@+id/layout_search_box"
            android:layout_alignEnd="@+id/layout_search_box"
            android:layout_below="@+id/layout_search_box"
            android:layout_marginStart="@dimen/dimen_margin_30"
            android:layout_marginEnd="@dimen/dimen_margin_30"
            android:paddingEnd="@dimen/dimen_band_input_height" />
    </RelativeLayout>


	<ImageView
		android:layout_width="match_parent"
		android:layout_height="@dimen/shadow_height"
		android:background="@drawable/shadow_bottom"
		android:layout_below="@+id/layout_titlebar"
		android:id="@+id/title_bar_shadow"/>
</RelativeLayout>