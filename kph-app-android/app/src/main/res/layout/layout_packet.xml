<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layoutPackets">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_packet_image"
        android:paddingTop="@dimen/dimen_margin_10"
        android:paddingEnd="@dimen/dimen_margin_10">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/ivPacket"
            android:layout_alignBottom="@+id/ivPacket"
            android:layout_alignStart="@+id/ivPacket"
            android:layout_alignEnd="@+id/ivPacket"
            android:paddingTop="@dimen/dimen_16dp"
            android:paddingBottom="@dimen/dimen_16dp"
            android:background="@android:color/white"
            android:id="@+id/aniBackground"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="@dimen/dimen_16dp"
            android:paddingBottom="@dimen/dimen_32dp"
            android:background="@android:color/holo_orange_dark"
            android:id="@+id/aniContent"
            android:visibility="visible"
            android:layout_alignStart="@+id/ivPacket"
            android:layout_alignEnd="@+id/ivPacket"
            android:layout_alignBottom="@+id/ivPacket"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivPacket"
            android:src="@drawable/anim_packet_sync" />

        <org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%"
            android:id="@+id/tvPercent"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/black"
            style="@style/FONT_HEADING_COUNT_BIG"
            android:layout_alignStart="@+id/ivPacket"
            android:layout_alignEnd="@+id/ivPacket"
            android:layout_alignTop="@+id/ivPacket"
            android:layout_alignBottom="@+id/ivPacket"
            android:gravity="center"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:background="@drawable/badge_background"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/layout_packet_image"
        android:id="@+id/layout_badge">

        <org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14"
            android:id="@+id/tvBadge"
            style="@style/style_textview_general"
            android:textSize="@dimen/dimen_font_size_heading_count"
            android:layout_centerInParent="true"
            android:gravity="center"
            app:customTextViewFont="@string/font_mikado_bold"
            android:textColor="@android:color/white" />
    </RelativeLayout>


</RelativeLayout>