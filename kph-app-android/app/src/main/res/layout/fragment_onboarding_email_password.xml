<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:app="http://schemas.android.com/apk/res-auto"
				xmlns:segmentedgroup="http://schemas.android.com/tools"
				android:id="@+id/layout_parent"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@color/kph_color_main_background">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="false">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingTop="@dimen/dimen_margin_30"
			android:paddingStart="@dimen/dimen_margin_30"
			android:paddingEnd="@dimen/dimen_margin_30"
			android:paddingBottom="@dimen/dimen_margin_30">

			<ImageView
				android:id="@+id/ivAvatar"
				android:layout_width="match_parent"
				android:layout_height="100dp"
				android:src="@drawable/avatar_placeholder"/>

			<org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
				android:id="@+id/txt_username"
				style="@style/style_textview_heading"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/dimen_margin_5"
				android:gravity="center"
				android:text="Username"
				android:textColor="@android:color/white"
				android:textSize="@dimen/dimen_font_size_base_subtitle"/>

			<org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
				android:id="@+id/txt_password"
				style="@style/style_textview_general"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="@dimen/dimen_margin_20"
				android:text="@string/create_a_password_for"
				android:textColor="@android:color/white"/>

			<org.unicefkidpower.kid_power.View.CustomControls.KPHEditText
				android:id="@+id/edit_password"
				style="@style/style_edittext_general"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dimen_edittext_general_height"
				android:layout_marginBottom="@dimen/dimen_margin_5"
				android:layout_marginTop="@dimen/dimen_margin_5"
				android:ems="10"
				android:hint="@string/password"
				android:imeOptions="actionNext"
				android:inputType="textPassword"
				android:paddingEnd="@dimen/dimen_margin_10"
				android:paddingStart="@dimen/dimen_margin_10"
				android:textSize="@dimen/dimen_font_size_base"/>

			<org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
				android:id="@+id/txt_password_invalid_error"
				style="@style/style_textview_general"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/email_syntax_invalid"
				android:textColor="@android:color/white"
				android:textSize="@dimen/dimen_font_size_base"
				android:visibility="gone"/>

			<org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
				android:id="@+id/txt_email"
				style="@style/style_textview_general"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="@dimen/dimen_margin_10"
				android:capitalize="sentences"
				android:text="@string/email_address"
				android:textColor="@android:color/white"/>

			<org.unicefkidpower.kid_power.View.CustomControls.KPHEditText
				android:id="@+id/edit_email"
				style="@style/style_edittext_general"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dimen_edittext_general_height"
				android:layout_marginBottom="@dimen/dimen_margin_5"
				android:layout_marginTop="@dimen/dimen_margin_5"
				android:ems="10"
				android:hint="@string/email_address"
				android:imeOptions="actionDone"
				android:inputType="textEmailAddress"
				android:paddingEnd="@dimen/dimen_margin_10"
				android:paddingStart="@dimen/dimen_margin_10"
				android:textSize="@dimen/dimen_font_size_base"/>

			<org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
				android:id="@+id/txt_email_invalid_error"
				style="@style/style_textview_general"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/email_syntax_invalid"
				android:textColor="@android:color/white"
				android:textSize="@dimen/dimen_font_size_base"
				android:visibility="gone"/>

			<org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
				android:id="@+id/txt_gender"
				style="@style/style_textview_general"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="@dimen/dimen_margin_10"
				android:text="@string/gender"
				android:textColor="@android:color/white"/>

			<org.unicefkidpower.kid_power.View.CustomControls.KPHSegmentedGroup
				android:id="@+id/segmented_gender"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dimen_button_general_height"
				android:layout_marginTop="@dimen/dimen_margin_5"
				android:orientation="horizontal"
				android:weightSum="3"
				segmentedgroup:sc_border_radius="@dimen/dimen_margin_5"
				segmentedgroup:sc_border_width="@dimen/dimen_margin_1">

				<org.unicefkidpower.kid_power.View.CustomControls.KPHRadioButton
					android:id="@+id/radio_female"
					style="@style/kph_style_radiobutton_general"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:background="@android:color/white"
					android:button="@null"
					android:checked="false"
					android:gravity="center"
					android:text="@string/female"
					android:textColor="@android:color/white"
					android:textSize="@dimen/dimen_font_size_base"/>


				<org.unicefkidpower.kid_power.View.CustomControls.KPHRadioButton
					android:id="@+id/radio_male"
					style="@style/kph_style_radiobutton_general"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:background="@android:color/white"
					android:button="@null"
					android:checked="false"
					android:gravity="center"
					android:text="@string/male"
					android:textColor="@android:color/white"
					android:textSize="@dimen/dimen_font_size_base"/>


				<org.unicefkidpower.kid_power.View.CustomControls.KPHRadioButton
					android:id="@+id/radio_skip"
					style="@style/kph_style_radiobutton_general"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:background="@android:color/white"
					android:button="@null"
					android:checked="true"
					android:gravity="center"
					android:text="@string/skip"
					android:textColor="@android:color/white"
					android:textSize="@dimen/dimen_font_size_base"/>

			</org.unicefkidpower.kid_power.View.CustomControls.KPHSegmentedGroup>

			<org.unicefkidpower.kid_power.View.CustomControls.KPHButton
				android:id="@+id/btn_next"
				style="@style/style_button_general"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dimen_button_general_height"
				android:layout_marginTop="@dimen/dimen_margin_15"
				android:text="@string/button_next"/>
		</LinearLayout>
	</ScrollView>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/layout_titlebar" >
		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:id="@+id/btnBack"
			android:layout_centerVertical="true">

			<ImageView
				android:layout_width="@dimen/dimen_navigation_bar_transparent_backarrow_width"
				android:layout_height="@dimen/dimen_navigation_bar_transparent_backarrow_height"
				android:id="@+id/img_back"
				android:layout_centerVertical="true"
				android:paddingStart="@dimen/dimen_navigation_bar_transparent_back_arrow_padding_start"
				android:paddingEnd="@dimen/dimen_navigation_bar_back_arrow_padding_end"
				android:paddingTop="@dimen/dimen_navigation_bar_transparent_back_arrow_padding_top"
				android:paddingBottom="@dimen/dimen_navigation_bar_back_arrow_padding_bottom"
				android:src="@drawable/back_arrow"
				android:scaleType="fitCenter" />

		</RelativeLayout>
	</RelativeLayout>
</RelativeLayout>