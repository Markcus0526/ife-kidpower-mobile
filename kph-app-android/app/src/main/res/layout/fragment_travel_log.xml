<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_parent"
    android:background="@color/kph_color_main_background">

	<RelativeLayout
		android:id="@+id/layout_titlebar"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dimen_navigation_bar_height"
		android:background="@color/kph_color_dark_blue">

		<org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/txtTitle"
			android:layout_centerVertical="true"
			android:layout_centerHorizontal="true"
			android:textColor="@color/kph_color_navigation_bar_title"
			android:textSize="@dimen/dimen_font_size_heading_base"
			android:text="@string/travel_log"
			style="@style/style_textview_heading"/>

	</RelativeLayout>


	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@+id/layout_titlebar">

		<android.support.v7.widget.RecyclerView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/list_travellog"
			android:scrollbars="vertical"/>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:layout_centerInParent="true"
				android:id="@+id/layout_travel_log_empty_comment"
				android:visibility="gone">

				<org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/txt_travel_log_empty_comment_title"
					android:layout_centerVertical="true"
					android:layout_centerHorizontal="true"
					android:textColor="@android:color/white"
					android:text="@string/travel_log"
					style="@style/FONT_BASE_TITLE"/>

				<org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/txt_travel_log_empty_comment_content"
					android:layout_below="@+id/txt_travel_log_empty_comment_title"
					android:layout_centerHorizontal="true"
					android:textColor="@android:color/white"
					android:text="@string/travel_log_empty_comment"
					android:gravity="center"
					android:layout_marginEnd="@dimen/dimen_margin_60"
					android:layout_marginStart="@dimen/dimen_margin_60"
					android:layout_marginTop="@dimen/dimen_margin_5"
					style="@style/FONT_BASE"/>
			</LinearLayout>
		</RelativeLayout>
	</RelativeLayout>

	<ImageView
		android:layout_width="match_parent"
		android:layout_height="@dimen/shadow_height"
		android:background="@drawable/shadow_bottom"
		android:layout_below="@+id/layout_titlebar"
		android:id="@+id/title_bar_shadow"/>
</RelativeLayout>