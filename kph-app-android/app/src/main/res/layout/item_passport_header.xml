<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  android:id="@+id/header_layout"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<LinearLayout
			android:id="@+id/layout_user_stats"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/kph_color_main_background"
			android:orientation="vertical"
			android:paddingBottom="@dimen/dimen_16dp">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="140dp">

				<ImageView
					android:id="@+id/ivAvatarBackground"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignBottom="@+id/ivAvatar"
					android:layout_alignEnd="@+id/ivAvatar"
					android:layout_alignStart="@+id/ivAvatar"
					android:layout_alignTop="@+id/ivAvatar"
					android:scaleType="fitCenter"
					android:src="@drawable/alien_background"/>

				<ImageView
					android:id="@+id/ivAvatar"
					android:layout_width="@dimen/dimen_avatar_smaller_size"
					android:layout_height="@dimen/dimen_avatar_smaller_size"
					android:layout_alignParentStart="true"
					android:layout_centerVertical="true"
					android:layout_marginStart="12dp"
					android:padding="@dimen/dimen_2dp"
					android:src="@drawable/avatar_placeholder"/>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_toEndOf="@+id/ivAvatar"
					android:orientation="vertical"
					android:paddingStart="@dimen/dimen_10dp">

					<org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
						android:id="@+id/txtUsername"
						style="@style/style_textview_heading"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Shock Shark"
						android:textColor="@android:color/white"
						android:textSize="@dimen/dimen_font_size_base_subtitle"/>

					<HorizontalScrollView
						android:id="@+id/main_info_horscrollview"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginEnd="@dimen/dimen_10dp">

						<LinearLayout
							android:id="@+id/main_info_horscrollview_content_layout"
							android:layout_width="wrap_content"
							android:layout_height="30dp"
							android:layout_marginBottom="@dimen/dimen_8dp"
							android:layout_marginTop="@dimen/dimen_4dp"
							android:orientation="horizontal">

							<org.unicefkidpower.kid_power.View.CustomControls.KPHImageLabelTextButton
								android:id="@+id/ivPacket"
								style="@style/kph_style_image_text_button_general"
								android:layout_width="82dp"
								android:layout_height="match_parent"
								app:ILTImageResourceId="@drawable/packet"
								app:ILTImageSize="30dp"
								app:ILTLabel="@string/label_packets"
								app:ILTLabelFont="@string/font_mikado_bold"
								app:ILTValue="0"
								app:ILTValueFont="@string/font_mikado_bold"/>

							<org.unicefkidpower.kid_power.View.CustomControls.KPHImageLabelTextButton
								android:id="@+id/ivMission"
								style="@style/kph_style_image_text_button_general"
								android:layout_width="87dp"
								android:layout_height="match_parent"
								app:ILTImageResourceId="@drawable/mission"
								app:ILTImageSize="30dp"
								app:ILTLabel="@string/label_misssions"
								app:ILTLabelFont="@string/font_mikado_bold"
								app:ILTValue="0"
								app:ILTValueFont="@string/font_mikado_bold"/>

							<org.unicefkidpower.kid_power.View.CustomControls.KPHImageLabelTextButton
								android:id="@+id/ivPowerpoint"
								style="@style/kph_style_image_text_button_general"
								android:layout_width="80dp"
								android:layout_height="match_parent"
								app:ILTImageResourceId="@drawable/powerpoint"
								app:ILTImageSize="30dp"
								app:ILTLabel="@string/label_points"
								app:ILTLabelFont="@string/font_mikado_bold"
								app:ILTValue="0"
								app:ILTValueFont="@string/font_mikado_bold"/>
						</LinearLayout>
					</HorizontalScrollView>
				</LinearLayout>
			</RelativeLayout>

			<org.unicefkidpower.kid_power.View.CustomControls.KPHImageTextButton
				android:id="@+id/btnLinkBand"
				style="@style/kph_style_image_text_button_band"
				android:layout_width="match_parent"
				android:layout_height="@dimen/dimen_button_general_height"
				android:layout_marginEnd="@dimen/dimen_margin_15"
				android:layout_marginStart="@dimen/dimen_margin_15"
				android:visibility="visible"
				app:customText="@string/sync_link_band_caption"/>

			<LinearLayout
				android:id="@+id/layout_device_not_match"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginEnd="@dimen/dimen_margin_15"
				android:layout_marginStart="@dimen/dimen_margin_15"
				android:orientation="vertical">

				<org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
					android:id="@+id/txtBandHasOrNot"
					style="@style/style_textview_general"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="10dp"
					android:gravity="center_horizontal"
					android:text="@string/google_fit_device_not_match"
					android:textColor="@android:color/white"/>
			</LinearLayout>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/layout_missions_tab"
			android:layout_width="match_parent"
			android:layout_height="@dimen/dimen_button_general_height"
			android:background="@android:color/transparent"
			android:orientation="horizontal">

			<org.unicefkidpower.kid_power.View.CustomControls.KPHButton
				android:id="@+id/btn_active_tab"
				style="@style/style_button_general"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@null"
				android:text="@string/active"
				android:textColor="@color/kph_color_white_clickable"
				android:textSize="@dimen/dimen_font_size_heading_count"
				app:customButtonFont="@string/font_pfdindisplaypro_regular"/>

			<org.unicefkidpower.kid_power.View.CustomControls.KPHButton
				android:id="@+id/btn_new_tab"
				style="@style/style_button_general"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@null"
				android:text="@string/new_number"
				android:textColor="@color/kph_color_white_clickable"
				android:textSize="@dimen/dimen_font_size_heading_count"
				app:customButtonFont="@string/font_pfdindisplaypro_regular"/>

			<org.unicefkidpower.kid_power.View.CustomControls.KPHButton
				android:id="@+id/btn_complete_tab"
				style="@style/style_button_general"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@null"
				android:text="@string/complete_number"
				android:textColor="@color/kph_color_white_clickable"
				android:textSize="@dimen/dimen_font_size_heading_count"
				app:customButtonFont="@string/font_pfdindisplaypro_regular"/>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/layout_mission_summary"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@android:color/transparent"
			android:orientation="vertical">

			<RelativeLayout
				android:id="@+id/item_content"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@android:color/transparent"
				android:minHeight="100dp"
				android:paddingBottom="@dimen/dimen_margin_30">

				<org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
					android:id="@+id/txt_CompletionTime"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"

					android:layout_marginEnd="@dimen/dimen_margin_30"
					android:layout_marginStart="@dimen/dimen_margin_30"
					android:layout_marginTop="@dimen/dimen_margin_30"
					android:text="MISSION COMPLETED! on July 20, 2015 at 9.01pm"
					android:textColor="@android:color/white"
					android:textSize="@dimen/dimen_font_size_base_small"/>

				<RelativeLayout
					android:id="@+id/layout_place"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@id/txt_CompletionTime"
					android:layout_centerHorizontal="true"
					android:layout_marginTop="@dimen/dimen_margin_5">

					<ImageView
						android:id="@+id/img_Star1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_marginEnd="@dimen/dimen_margin_1"
						android:src="@drawable/star"/>

					<org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
						android:id="@+id/txt_Title"
						style="@style/style_textview_heading"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_toEndOf="@id/img_Star1"
						android:gravity="center"
						android:maxWidth="210dp"
						android:text="FAR EASTERN NEPAL"
						android:textColor="@android:color/white"
						android:textSize="@dimen/dimen_font_size_base_title"/>

					<ImageView
						android:id="@+id/img_Star2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"

						android:layout_centerVertical="true"
						android:layout_marginStart="@dimen/dimen_margin_1"
						android:layout_toEndOf="@id/txt_Title"
						android:src="@drawable/star"/>

				</RelativeLayout>

				<RelativeLayout
					android:id="@+id/layout_content"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_below="@+id/layout_place"
					android:layout_marginTop="@dimen/dimen_margin_15">

					<ImageView
						android:id="@+id/iv_country_shape"
						android:layout_width="match_parent"

						android:layout_height="300dp"
						android:layout_marginEnd="@dimen/dimen_margin_30"
						android:layout_marginStart="@dimen/dimen_margin_30"
						android:maxHeight="@dimen/dimen_country_shape_max_width_height"
						android:maxWidth="@dimen/dimen_country_shape_max_width_height"
						android:src="@drawable/country"/>

					<ImageView
						android:id="@+id/img_MissionComplete"
						android:layout_width="@dimen/dimen_country_stamp_height"
						android:layout_height="@dimen/dimen_country_stamp_height"
						android:layout_alignParentEnd="true"
						android:layout_alignParentTop="false"
						android:layout_marginEnd="@dimen/dimen_margin_30"
						android:scaleType="fitCenter"
						android:src="@drawable/icon_country_stamp"/>

					<LinearLayout
						android:id="@+id/layout_missionStatus"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignBottom="@+id/iv_country_shape"
						android:layout_alignTop="@+id/iv_country_shape"
						android:layout_centerInParent="true"
						android:layout_marginEnd="@dimen/dimen_margin_30"
						android:layout_marginStart="@dimen/dimen_margin_30"
						android:gravity="center"
						android:orientation="vertical">

						<org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
							android:id="@+id/txt_Completion_Status"
							style="@style/style_textview_italic"
							android:layout_width="wrap_content"

							android:layout_height="wrap_content"
							android:layout_alignStart="@+id/txt_mission_name"
							android:layout_marginTop="@dimen/dimen_16dp"
							android:text="Mission Complete!"
							android:textColor="@color/kph_color_orange"
							android:textSize="@dimen/dimen_font_size_base_subtitle"/>

						<org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
							android:id="@+id/txt_mission_name"
							style="@style/style_textview_heading"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_below="@+id/txt_CompletionMessage"
							android:layout_centerHorizontal="true"
							android:layout_marginTop="@dimen/dimen_2dp"
							android:gravity="center"
							android:maxLines="3"
							android:maxWidth="250dp"
							android:singleLine="false"
							android:text="MISSION UGUNDdfgdfgddddddA WITH TYSON CHANER SDFSDFSDFSD"
							android:textColor="@android:color/white"
							android:textSize="@dimen/dimen_font_size_heading_base"/>

						<RelativeLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content">

							<LinearLayout
								android:id="@+id/layout_missionInfo"
								android:layout_width="wrap_content"
								android:layout_height="30dp"
								android:layout_centerHorizontal="true"
								android:layout_marginTop="@dimen/dimen_2dp"
								android:orientation="horizontal">

								<org.unicefkidpower.kid_power.View.CustomControls.KPHImageTextButton
									android:id="@+id/ivPacket_Detail"
									style="@style/kph_style_image_text_button_general"
									android:layout_width="80dp"
									android:layout_height="match_parent"
									app:customImageResourceId="@drawable/packet"
									app:customImageSize="30dp"
									app:customImageTextButtonFont="@string/font_mikado_bold"
									app:customText="0"/>

								<org.unicefkidpower.kid_power.View.CustomControls.KPHImageTextButton
									android:id="@+id/ivPowerpoint_Detail"
									style="@style/kph_style_image_text_button_general"
									android:layout_width="100dp"
									android:layout_height="match_parent"
									app:customImageResourceId="@drawable/powerpoint"
									app:customImageSize="30dp"
									app:customImageTextButtonFont="@string/font_mikado_bold"
									app:customText="0"/>
							</LinearLayout>
						</RelativeLayout>
					</LinearLayout>

					<LinearLayout
						android:id="@+id/layout_dummy"
						android:layout_width="match_parent"
						android:layout_height="@dimen/dimen_delight_stamp_height"
						android:layout_alignBottom="@+id/iv_country_shape"
						android:orientation="vertical"></LinearLayout>

					<LinearLayout
						android:id="@+id/layout_delight_list"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_alignTop="@+id/layout_dummy"
						android:orientation="vertical">
					</LinearLayout>
				</RelativeLayout>
			</RelativeLayout>

			<LinearLayout
				android:id="@+id/layout_sep_misc"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@android:color/transparent"
				android:orientation="vertical">

				<org.unicefkidpower.kid_power.View.CustomControls.ProgressBarView
					android:id="@+id/mission_progress"
					android:layout_width="match_parent"
					android:layout_height="@dimen/dimen_8dp"
					android:visibility="invisible"
					app:initPercent="50"/>

				<LinearLayout
					android:id="@+id/cell_divider"
					android:layout_width="match_parent"
					android:layout_height="@dimen/dimen_1dp"
					android:background="@color/kph_color_dark_blue_30"
					android:orientation="vertical">
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>


		<org.unicefkidpower.kid_power.View.CustomControls.KPHTextView
			android:id="@+id/txt_no_corresponding_missions"
			style="@style/style_textview_general"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/dimen_margin_30"
			android:layout_marginEnd="@dimen/dimen_margin_30"
			android:layout_marginStart="@dimen/dimen_margin_30"
			android:layout_marginTop="@dimen/dimen_margin_30"
			android:background="@color/kph_color_blue"
			android:gravity="center"
			android:text="@string/no_corresponding_missions"
			android:textColor="@android:color/white"/>
	</LinearLayout>
</LinearLayout>