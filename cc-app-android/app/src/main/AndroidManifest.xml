<?xml version="1.0" encoding="utf-8"?>
<manifest package="org.caloriecloud.android"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <activity android:name="com.facebook.react.devsupport.DevSettingsActivity" />

    <application
        android:name=".util.CCApp"
        android:allowBackup="false"
        android:fullBackupContent="@xml/backup_config"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Crashlytics Integration-->
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="d177fb244cfbf946f4d4ec04bde1687061b91fee"
        />

        <!-- Splash Activity -->
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- First Time Launch Activity -->
        <activity
            android:name=".activity.FirstTimeLaunchActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
        </activity>

        <!-- Register Activity -->
        <activity
            android:name=".activity.RegisterActivity"
            android:theme="@style/RegisterTheme"
            android:screenOrientation="portrait">
        </activity>

        <!-- Existing Account Activity -->
        <activity
            android:name=".activity.ExistingAccountActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
        </activity>

        <!-- Support Activity-->
        <activity android:name="com.zendesk.sdk.support.SupportActivity" android:theme="@style/SupportTheme"/>

        <!-- Default Tracker Authorization Activity -->
        <activity
            android:name=".activity.DefaultTrackerAuthorizationActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
        </activity>

        <!-- Pre-Dashboard Activity -->
        <activity
            android:name=".activity.PreDashboardActivity"
            android:theme="@style/PreDashboardTheme"
            android:screenOrientation="portrait">
        </activity>

        <!-- Onboarding Activity -->
        <activity
            android:name=".activity.OnboardingActivity"
            android:theme="@style/OnboardingTheme"
            android:screenOrientation="portrait">
        </activity>

        <!-- Main Activity -->
        <activity
            android:label="@string/dashboard"
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait">
        </activity>

        <!-- Challenge Info Activity -->
        <activity
            android:label=""
            android:name=".activity.ChallengeInfoActivity"
            android:parentActivityName=".activity.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity"/>
        </activity>

    </application>

</manifest>